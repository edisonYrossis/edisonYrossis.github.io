---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'

import '@fontsource-variable/onest';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">


	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Edison Yadir Rossis" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative overflow-auto">
		
		
		
		<div class="fixed inset-0 -z-10">
			<!-- Contenido del fondo -->
			<div class="absolute top-0 z-[-2] h-screen w-screen bg-[#000] bg-[radial-gradient(#5e5e5e7a_1px,#000_1px)] bg-[size:20px_20px]"></div>
		</div>
		
		
		

		<slot />
  

		<Footer /> 

	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		
	}

	
	html {
		font-family: 'Onest Variable' ,system-ui, sans-serif;
		background-color: #000;
		scroll-behavior: smooth;
		

	}

	body {
		padding-top: 1rem;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	
	}

	
	
</style>
