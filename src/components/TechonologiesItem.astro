---
interface Props {
  name: string;
  description: string;
  level: string;
  stars: number;
  icon: any;
}
const { level, name, stars, description, icon} = Astro.props;

import StarIcon from '../icons/StarIcon.astro'

---

<li class="mb-10 ms-4 flex gap-5 items-center">
 
 
    <div>
            { 
             <icon.icon class="size-12 opacity-50 rounded-md" />
            }
        </div> 
        <div >
 <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-red-400 dark:text-red-300 opacity-60"
    >{level}</time
  >
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{name}</h3>
  <p class="mb-1 text-base font-normal text-gray-500 dark:text-gray-400">
      {description}
    </p>

    <ul class="flex gap-0.5">
        {Array.from({ length: stars }).map(() => (
        <StarIcon class="size-5" />
      ))}
    </ul> 
    </div>
 

</li>
